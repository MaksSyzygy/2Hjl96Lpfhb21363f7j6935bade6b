@model IEnumerable<BankApplication.Models.ViewModels.Pages.PageVM>

@{
    foreach (var item in Model)
    {
        ViewBag.Title = item.PageCategory;
    }
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="categoryListNewsHeader col-lg-8 col-md-8 col-sm-12">
            <h4>@ViewBag.Title</h4>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-8 col-sm-12">
                <a style="display:list-item; text-decoration:none" href="/news/news-details/@item.Description" target="_blank">
                    @item.Title
                </a>
                <br />
            </div>
        </div>
    }
</div>